`timescale 1ns / 1ps

module tb_q;
    int arr[$];  // $ sign to specify queue - SEMICOLON ADDED
 
    initial begin
        arr = {1,2,3};  // no need to USE ' before { } for queue initialization
        $display("arr:%0p", arr);
        
        arr.push_front(9);
        $display("arr:%0p", arr);
         arr.push_back(2);
        $display("arr:%0p", arr);
    end 

endmodule
